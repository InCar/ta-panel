{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext",
        "outDir": "./build/",
        "isolatedModules": true,
        "strict": true,
        "noImplicitAny": false,
        "jsx": "preserve"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}